<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/DiscoveryFragment">

    <fragment
        android:id="@+id/DiscoveryFragment"
        android:name="com.akurucz.bonjour.DiscoveryFragment"
        android:label="@string/discovery_fragment_label"
        tools:layout="@layout/fragment_discovery">

        <action
            android:id="@+id/action_DiscoveryFragment_to_ServiceDetailFragment"
            app:destination="@id/DetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailFragment"
        android:name="com.akurucz.bonjour.ServiceDetailFragment"
        android:label="@string/detail_fragment_label"
        tools:layout="@layout/fragment_service_detail">
    </fragment>
</navigation>